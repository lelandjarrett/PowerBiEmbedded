@page "{customerImageID:int?}"
@model BlobStorage.Pages.Customers.EditImageModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Editing @Model.CustomerImages.FileName</h2>

<form method="post">
    <input type="hidden" asp-for="CustomerImages.ID"/>
    <div class="form-group">
        <label asp-for="CustomerImages.FileName"></label>
        <input asp-for="CustomerImages.FileName" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="CustomerImages.CustomerID"></label>
        <input asp-for="CustomerImages.CustomerID" class="form-control"/>
    </div>
     <button type="submit" class="btn btn-primary">Save</button> 
    
</form>